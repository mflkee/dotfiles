[global]
    ### Display ###
    monitor = 0
    follow = mouse

    ### Geometry ###
    width = (0, 300)
    height = (0, 100)
    origin = top-right
    offset = (10, 50)  # Новый синтаксис для offset
    scale = 0
    notification_limit = 0

    ### Progress bar ###
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300

    indicate_hidden = yes
    transparency = 15
    separator_height = 1
    padding = 8
    horizontal_padding = 10
    text_icon_padding = 0
    frame_width = 2
    frame_color = "#BD93F9"  # Фиолетовый цвет рамки
    separator_color = frame

    sort = yes
    idle_threshold = 120

    ### Text ###
    font = Monospace 10
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"  # Жирный заголовок
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    min_icon_size = 0
    max_icon_size = 64
    icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab
    always_run_script = true
    title = Dunst
    class = Dunst
    corner_radius = 8  # Закруглённые углы
    ignore_dbusclose = false

    ### Wayland ###
    force_xwayland = false

    ### Legacy ###
    force_xinerama = false

    ### Mouse ###
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[urgency_low]
    background = "#282A36"  # Тёмный фон
    foreground = "#50FA7B"  # Зелёный текст
    timeout = 10

[urgency_normal]
    background = "#282A36"  # Тёмный фон
    foreground = "#BD93F9"  # Фиолетовый текст
    timeout = 10

[urgency_critical]
    background = "#FF5555"  # Красный фон
    foreground = "#F8F8F2"  # Светлый текст
    frame_color = "#FF5555"  # Красная рамка
    timeout = 0
