# Workspace â†’ monitor mapping managed via chezmoi (templated by hostname).
{{- $host := .chezmoi.hostname }}
{{- if eq $host "archlinux-desktop" }}
# Desktop: single monitor DP-4 gets all workspaces.
workspace=1,monitor:DP-4,default:true
workspace=2,monitor:DP-4
workspace=3,monitor:DP-4
workspace=4,monitor:DP-4
workspace=5,monitor:DP-4
workspace=6,monitor:DP-4
workspace=7,monitor:DP-4
workspace=8,monitor:DP-4
workspace=9,monitor:DP-4
workspace=10,monitor:DP-4
{{- else if eq $host "archlinux-laptop" }}
# Laptop + ultrawide: 1-5 on HDMI ultrawide, 6-10 on eDP panel.
workspace=1,monitor:HDMI-A-1,default:true
workspace=2,monitor:HDMI-A-1
workspace=3,monitor:HDMI-A-1
workspace=4,monitor:HDMI-A-1
workspace=5,monitor:HDMI-A-1
workspace=6,monitor:eDP-1,default:true
workspace=7,monitor:eDP-1
workspace=8,monitor:eDP-1
workspace=9,monitor:eDP-1
workspace=10,monitor:eDP-1
{{- else }}
# Fallback: let auto-setup script assign dynamically.

# No static mapping.
{{- end }}
